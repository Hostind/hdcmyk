            }

            clearGrid() {
                this.updateStatus('Grid cleared');
                const canvas = document.getElementById('heatmap-canvas');
                if (canvas) {
                    const ctx = canvas.getContext('2d');
                    ctx.clearRect(0, 0, canvas.width, canvas.height);
